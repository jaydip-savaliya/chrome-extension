{
    "manifest_version": 3,
    "name": "Chrome Extension",
    "version": "1.0",
    "description": "Chrome extension built with React and Vite.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "vite.svg",
        "48": "vite.svg",
        "128": "vite.svg"
    },
    "action": {
        "default_icon": {
            "16": "vite.svg",
            "48": "vite.svg",
            "128": "vite.svg"
        },
        "default_popup": "index.html"
    }
}